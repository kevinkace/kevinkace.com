doctype html
html(lang="en")
  head
    block title
      title Kevin Cameron

    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(
      href="https://fonts.googleapis.com/css?family=Alfa+Slab+One|Rokkitt|Noto+Sans",
      rel="stylesheet"
    )
    link(
      href="/css/kevinkace.css",
      rel="stylesheet"
    )
  body

    header
      div.content
        h1.logo(data-rollText="Kace.com")
          a(href="/") Kevin
            em Kace
              i .com
            span Cameron

    main
      div.content
        block content

    footer
      div.content
        ul.kace-g.guttered
          each link, idx in footer.links
            li(class="kace-u-1-#{footer.links.length}")
              a(class="btn btn-default", href="#{link.url}")
                i(class="fa fa-#{link.title}")
                span #{link.title}
